<%- include ('../partials/header') %>
<style>
    .center {
        display: block;
        margin-top: 10px;
        margin-left: auto;
        margin-right: auto;
    }
    </style>
<div class="container">
    <img src="https://www.nicepng.com/png/detail/201-2018162_restaurant-cutlery-symbol-of-a-cross-comments-fork.png"
    class="center" height="150" alt="Logo">
    <h1 id="mainHeading">Start Food Booking</h1>
    <br><br><br>
    <form class="row g-3 justify-content-center" action='/guest/foodOrders' method="POST">
        <div class="row align-items-center">
            <div class="col-md-4">
                <label for="exampleFormControlInput1">Date</label>
                <input type="date" class="form-control" id="exampleFormControlInput1" name="OrderDate">
            </div>
            <div class="col-md-4">
                <label for="Select" class="form-label">Type</label>
                <select id="Select" class="form-select" name="Type">
                    <option value="Breakfast">Breakfast</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="tentacles" class="col-form-label">Cost</label>
                <input type="number" id="tentacles" class="form-control" name="Cost" required>
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Menu</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Menu" required></textarea>
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>
</div>

<%- include ('../partials/footer') %>