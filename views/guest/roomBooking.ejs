<%- include ('../partials/header') %>

<style>
    .center {
        display: block;
        margin-top: 10px;
        margin-left: auto;
        margin-right: auto;
    }
    </style>
    <img src="https://www.clipartkey.com/mpngs/m/40-408267_hotel-room-icon-clipart-png-download-hotel-room.png"
    class="center" height="150" alt="Logo">

<div class="container">
    <h1 id="mainHeading">Guest Room Booking</h1>
    <br><br><br>
    <form class="row g-3 justify-content-center" action='/guest/roomBooking' method="POST">
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="exampleFormControlInput1">Stay From</label>
                <input type="date" class="form-control disable" id="exampleFormControlInput1" value="<% if(bookingData.stayFrom){ %><%=bookingData.stayFrom%><% } %>" name="stayFrom">
            </div>
            <div class="mb-3 col-md-6">
                <label for="exampleFormControlInput2">Stay Till</label>
                <input type="date" class="form-control disable" id="exampleFormControlInput2" value="<% if(bookingData.stayTill){ %><%=bookingData.stayTill%><% } %>" name="stayTill">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="disabledSelect" class="form-label">Occupancy</label>
                <select id="disabledSelect" class="form-select disable" name="occupancy">
                    <option value="<%=bookingData.occupancy%>"><%=bookingData.occupancy%></option>
                </select>
            </div>
            <div class="mb-3 col-md-4">
                <label for="disabledSelect1" class="form-label">HasBathroom</label>
                <select id="disabledSelect1" class="form-select disable" name="hasBathroom">
                    <option value="<%=bookingData.hasBathroom%>"><%=bookingData.hasBathroom%></option>
                </select>
            </div>
            <div class="mb-3 col-md-4">
                <label for="disabledSelect2" class="form-label">Payment Method</label>
                <select id="disabledSelect2" class="form-select" name="paymentMethod">
                    <option value="Cash">Cash</option>
                    <option value="Online">Online</option>
                    <option value="Sponsored">Sponsored</option>
                </select>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-6">
                <label for="input1" class="col-form-label">Aadhar Number</label>
                <input type="text" id="input1" class="form-control" name="aadharNumber" minlength="12" maxlength="12" required>
            </div>
            <div class="col-md-6">
                <label for="input2" class="col-form-label">Name</label>
                <input type="text" id="input2" class="form-control" name="name" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label for="tentacles" class="col-form-label">Age</label>
                <input type="number" id="tentacles" class="form-control" name="age" min="16" max="100" required>
            </div>
            <div class="col-md-5">
                <label for="input3" class="col-form-label">Mobile</label>
                <input type="text" id="input3" class="form-control" name="mobile" minlength="10" maxlength="10" required>
            </div>
            <div class="col-md-5">
                <label for="input4" class="col-form-label">Email</label>
                <input type="email" id="input4" class="form-control" name="email" required>
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Purpose of Stay</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="purposeOfStay" required></textarea>
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>
</div>

<%- include ('../partials/footer') %>