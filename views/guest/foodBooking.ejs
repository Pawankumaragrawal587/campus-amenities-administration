<%- include ('../partials/header') %>

<div class="container">
    <h1 id="mainHeading">Book Your Meal!</h1>
    <form class="row g-3 justify-content-center" action='/guest/foodBooking' method="POST">
        <div class="row align-items-center">
            <div class="mb-3 col-md-6">
                <label for="exampleFormControlInput1">Date</label>
                <input type="date" class="form-control" id="exampleFormControlInput1" value="<%=Order.OrderDate.toISOString().slice(0, 10)%>" disabled>
            </div>
            <div class="mb-3 col-md-6">
                <label for="Select" class="form-label">Type</label>
                <select id="Select" class="form-select" name="Type" disabled>
                    <option value="Breakfast"><%=Order.Type%></option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="tentacles" class="col-form-label">Quantity</label>
                <input type="number" id="tentacles" class="form-control" name="Quantity" min="1" max="5" required>
            </div>
            <div class="mb-3 col-md-6">
                <label for="disabledSelect2" class="form-label">Payment Method</label>
                <select id="disabledSelect2" class="form-select" name="PaymentMethod">
                    <option value="Cash">Cash</option>
                    <option value="Online">Online</option>
                    <option value="Sponsored">Sponsored</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="input3" class="col-form-label">Mobile</label>
                <input type="text" id="input3" class="form-control" name="Mobile" minlength="10" maxlength="10" required>
            </div>
            <div class="mb-3 col-md-6">
                <label for="input2" class="col-form-label">Address</label>
                <input type="text" id="input2" class="form-control" name="Address" required>
            </div>
        </div>
        <div>
            <input type="hidden" name="OrdersID" value="<%=Order.OrdersID%>">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>
</div>

<%- include ('../partials/footer') %>