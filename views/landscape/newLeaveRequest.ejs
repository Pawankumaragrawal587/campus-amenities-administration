<%- include ('../partials/header') %>

<div class="container">
    <h1 id="mainHeading">Submit Leave Request</h1>
    <form class="row g-3 justify-content-center" action="/landscape/leaveRequests" method="POST">
        <div class="row align-items-center">
            <div class="col-md-4 mb-3">
                <label for="exampleFormControlInput2">GID</label>
                <input type="text" class="form-control disable" id="exampleFormControlInput2" value="<%=user.CollegeID%>" name="GID">
            </div>
            <div class="col-md-4 mb-3">
                <label for="exampleFormControlInput1">Date</label>
                <input type="date" class="form-control" id="exampleFormControlInput1" name="Date">
            </div>
            <div class="col-md-4 mb-3">
                <label for="Select" class="form-label">Day</label>
                <select id="Select" class="form-select" name="Day">
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Reason</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Reason" required></textarea>
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>
</div>

<%- include ('../partials/footer') %>