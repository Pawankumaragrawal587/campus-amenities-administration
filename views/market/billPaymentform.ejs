<%- include ('../partials/header') %>

	<style>
		.btn {
			min-width: 200px;
		}

		label {
			margin-bottom: 0.4rem;
		}

		.row1 {
			display: flex;
			align-items: flex-start;
		}

		.column1 {
			flex: 50%;
			margin-right: 2rem
		}

		.center {
			display: block;
			margin-top: 10px;
			margin-left: auto;
			margin-right: auto;
		}
	</style>

	<div class="container">
		<img src="https://cesc.co.in/ptrlineins/imags/Security-Deposit-Bill.png"
			class="center" height="150" alt="Logo">
		<h1 id="mainHeading">Shop Renting Form</h1>
		<form action="/market/billPayment" method="post">
			<div class="row1">
				<div class="column1">
					<div>
						<label for="exampleFormControlInput1">Shop ID</label>
						<input type="text" class="form-control disable"
							id="exampleFormControlInput1" value="" name=shopid">
					</div>
					<br>
					<div class="form-group">
						<label for="input1">Reference ID</label>
						<input type="text" id="input1" name="referenceid" class="form-control"
							placeholder="Enter the your reference ID" autofocus required>
					</div>
					<br>
					<div class="form-group">
						<label for="input2">Amount of Electricity Bill Paid (in &#x20B9)</label>
						<input type="text" id="input2" name="ebp" class="form-control"
							placeholder="Enter the Amount of Electricity Bill" required>
					</div>
				</div>
				<div class="column1">
					<div>
						<label for="exampleFormControlInput2">ShopKeeper ID</label>
						<input type="text" class="form-control disable"
							id="exampleFormControlInput2" value="" name="shopkeeperid">
					</div>
					<br>
					<div class="form-group">
						<label for="input3">Name</label>
						<input type="text" id="input3" name="name" class="form-control"
							placeholder="Enter your name" required>
					</div>

					<br>
					<div class="form-group">
						<label for="input4">Amount of Rent Paid (in &#x20B9)</label>
						<input type="text" name="rp" id="input4" class="form-control"
							placeholder="Enter the Amount of Electricity Bill"
							required>
					</div>
				</div>
			</div>
			<br>
			<div class="text-center form-group">
				<input type="submit" name="submit" class="btn btn-primary btn-block mb-4"
					value="Submit">
			</div>
			
		</form>

	</div>


<%- include ('../partials/footer') %>